@model DVDRental.Models.Actor

@{
    ViewData["Title"] = "Edit";
}

<h1 style="padding-top: 25px; padding-bottom: 20px;">Edit Actor Details</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ActorNumber" />
            <div class="form-group"  style="padding-top: 10px; padding-bottom: 10px;">
                <label asp-for="ActorSurname" class="control-label"></label>
                <input asp-for="ActorSurname" class="form-control" />
                <span asp-validation-for="ActorSurname" class="text-danger"></span>
            </div>
            <div class="form-group"  style="padding-top: 10px; padding-bottom: 10px;">
                <label asp-for="ActorFirstName" class="control-label"></label>
                <input asp-for="ActorFirstName" class="form-control" />
                <span asp-validation-for="ActorFirstName" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-top: 25px; padding-bottom: 20px;">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
